@{
    Layout = null;
}
@model MyTeam.Models.BusiReq

@if (Model == null)
{
    <div class="alert alert-warning">无此记录</div>
    @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-default" })
    return;
}
<script language="javascript" type="text/javascript" src="~/Scripts/My97DatePicker/WdatePicker.js"></script>

<script>
    function hideForm() {
        if ($('#info > p').attr('class') == 'alert alert-success')
            $('#editForm').hide()
    }
</script>
<div class="row">
    <div class="col-md-12">
        <div id="info"></div>
        @using (Ajax.BeginForm("Edit", "BusiReq", null, new AjaxOptions { UpdateTargetId = "info", OnComplete="hideForm" },
                new { @class = "form-horizontal", role = "form", id="editForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.HiddenFor(model => model.BRID);

    <div class="form-group">
        @Html.LabelFor(model => model.BRProjID, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            <!--业需项目下拉选择-->
            @Html.DropDownListFor(model => model.BRProjID, ViewBag.brProjLs as SelectList, new { @class = "form-control" })
        </div>
    </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BusiReqNo, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.BusiReqNo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BusiReqNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BusiReqName, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.BusiReqName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BusiReqName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Desc, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Desc, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Desc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreateDate, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.CreateDate, "DateTime")
                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Stat, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.Stat, ViewBag.StatList as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Stat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Remark, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Remark, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                </div>
            </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="保存" class="btn btn-primary" />
            <button type="button" class="btn btn-default" data-dismiss="modal">
                关闭
            </button>
        </div>
    </div>
        }
    </div>
</div>
