@{
    Layout = null;
}
@model MyTeam.Models.ReqTrack

<script language="javascript" type="text/javascript" src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
<script>
    // 日期控件
    $(document).ready(function () {
        $("#PlanDeadLine").attr({ class: "form-control Wdate datepicker", onclick: "WdatePicker({ dateFmt: 'yyyy/M/d' })", placeholder: "点击选择日期" });
        $("#RealDeadLine").attr({ class: "form-control Wdate datepicker", onclick: "WdatePicker({ dateFmt: 'yyyy/M/d' })", placeholder: "点击选择日期" });
        $("#ApproveDate").attr({ class: "form-control Wdate datepicker", onclick: "WdatePicker({ dateFmt: 'yyyy/M/d' })", placeholder: "点击选择日期" });
    });
</script>

<script>
    function hideForm() {
        if ($('#info > p').attr('class') == 'alert alert-success')
            $('#editForm').hide()
    }
</script>

<div class="row">
    <div class="col-md-12">
        @using (Ajax.BeginForm("Create", "ReqTrack", null, new AjaxOptions { UpdateTargetId = "info", OnComplete = "hideForm" },
                new { @class = "form-horizontal", role = "form", id="editForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.ProjID, new { @class = "col-md-3 control-label" })
                <!--项目名称列表-->
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.ProjID, ViewBag.ProjList as SelectList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ReqNo, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ReqNo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ReqName, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ReqName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Priority, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    <!--优先级列表-->
                    @Html.DropDownListFor(model => model.Priority, ViewBag.PriorityList as SelectList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ReqWriter, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ReqWriter, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqWriter, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PlanDeadLine, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.PlanDeadLine, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PlanDeadLine, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RealDeadLine, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.RealDeadLine, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RealDeadLine, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ChangeChar, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    <!--变更标识列表-->
                    @Html.DropDownListFor(model => model.ChangeChar, ViewBag.ChangeCharList as SelectList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ApprovePerson, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ApprovePerson, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ApprovePerson, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ApproveDate, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ApproveDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ApproveDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SoftReqNo, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.SoftReqNo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SoftReqNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SoftReqName, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.SoftReqName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SoftReqName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ReqStat, new { @class = "col-md-3 control-label" })

                <div class="col-md-9">
                    <!--需求状态列表-->
                    @Html.DropDownListFor(model => model.ReqStat, ViewBag.ReqSoftStatList as SelectList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="新增" class="btn btn-primary" />
                    @Html.ActionLink("关闭", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>

        }
        <div id="info"></div>
    </div>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
