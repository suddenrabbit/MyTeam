@model IEnumerable<MyTeam.Models.UpgradeLog>
@{
    ViewBag.Title = "更新记录";
}

<h2>@ViewBag.Title</h2>

<div class="row card">
    <table class="table table-striped">
        <thead>
            <tr>
                <th width="20%" class="text-left">版本号</th>
                <th width="30%" class="text-left">发布日期</th>
                <th width="50%" class="text-left">更新说明</th>
            </tr>
        </thead>
        <tbody style="font-family:consolas,monospace">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.SysVersion)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                    <td>@Html.Raw(item.Description)</td>
                </tr>
            }            

        </tbody>
    </table>
</div>
