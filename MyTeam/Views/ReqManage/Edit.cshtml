<script>
    function checkRlsNo() {
        // 下发通知编号格式控制
        var rlsNo = $("#RlsNo").val();

        var rname = /[\u4E00-\u9FA5]/;
        if (rlsNo.length > 0) {
            if (rname.test(rlsNo)) {
                alert("下发通知编号不能含有汉字");
                $("#RlsNo").focus();
                return;
            }
            if (rlsNo.length != 12) {
                alert("下发通知编号必须是形如YFZX20160101");
                $("#RlsNo").focus();
                return;
            }
        }
    }

    function checkSecondRlsNo() {
        // 副下发通知编号格式控制
        var secondRlsNo = $("#SecondRlsNo").val();

        var rname = /[\u4E00-\u9FA5]/;
        if (secondRlsNo.length > 0) {
            if (rname.test(secondRlsNo)) {
                $("#SecondRlsNo").focus();
                alert("副下发通知编号不能含有汉字");
                return;
            }
            
            if (secondRlsNo.length != 12) {
                alert("副下发通知编号必须是形如YFZX20160101");
                $("#SecondRlsNo").focus();
                return;
            }
        }
    }

    function changeReqFromDept() {
        $('#ReqFromDept').val($('#ReqFromDeptList').val());
    }
</script>