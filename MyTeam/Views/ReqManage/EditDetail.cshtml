@{
    Layout = null;
}

@model MyTeam.Models.ReqDetail

@if (Model == null)
{
    <div class="alert alert-warning">无此记录</div>
    @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-default" })
    return;
}
<script language="javascript" type="text/javascript" src="~/Scripts/My97DatePicker/WdatePicker.js"></script>

<script>
    function hideForm() {
        if ($('#info > p').attr('class') == 'alert alert-success')
            $('form').hide()
    }
</script>

<div class="row">
    <div class="col-md-12">
        <div id="info"></div>
        @using (Ajax.BeginForm("EditDetail", "ReqManage", null, new AjaxOptions { UpdateTargetId = "info", OnComplete = "hideForm" },
                        new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.HiddenFor(model => model.ReqDetailID);
            @Html.HiddenFor(model => model.OldReqDetailNo);
            @Html.HiddenFor(model => model.CreateTime);
            @Html.HiddenFor(model => model.ReqMainID);

            <fieldset>
                <legend>需求详细信息</legend>

                <div class="form-group">
                    @Html.LabelFor(model => model.ReqDetailNo, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ReqDetailNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ReqDetailNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ReqDesc, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ReqDesc, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ReqDesc, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.ReqType, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        <input type="text" value="@Model.ReqTypeName" disabled="disabled" class="form-control" />
                        <span class="text-info">（需求类型将根据需求编号自动生成）</span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DevWorkload, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.DevWorkload, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DevWorkload, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--需求状态下拉选择-->
                <div class="form-group">
                    @Html.LabelFor(model => model.ReqStat, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.ReqStat, ViewBag.ReqStatList as SelectList, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsSysAsso, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.CheckBoxFor(model => model.IsSysAsso, new { @class = "checkbox" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AssoSysName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.AssoSysName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AssoSysName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AssoReqNo, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.AssoReqNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AssoReqNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AssoReleaseDesc, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.AssoReleaseDesc, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.AssoReleaseDesc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Remark, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.Remark, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Version, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Version, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Version, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OutDate, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.OutDate, "DateTime")
                        @Html.ValidationMessageFor(model => model.OutDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </fieldset>


            @Html.HiddenFor(model => model.ReqReleaseID)
            @Html.HiddenFor(model => model.SecondReqReleaseID)
