@{
    Layout = null;
}

@model MyTeam.Models.ReqMain

@if (Model == null)
{
    <div class="alert alert-warning">无此记录</div>    
    return;
}
<script language="javascript" type="text/javascript" src="~/Scripts/My97DatePicker/WdatePicker.js"></script>

<script>
    function hideForm() {
        if ($('#info > p').attr('class') == 'alert alert-success')
            $('#editForm').hide()
    }
</script>

<div class="row">
    <div class="col-md-12">
        <div id="info"></div>
        @using (Ajax.BeginForm("EditMain", "ReqManage", null, new AjaxOptions { UpdateTargetId = "info", OnComplete = "hideForm" },
                new { @class = "form-horizontal", role = "form", id="editForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.HiddenFor(model => model.ReqMainID);
            @Html.HiddenFor(model => model.OldReqNo);
            
            <!--系统下拉选择-->
            <div class="form-group">
                @Html.LabelFor(model => model.SysID, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.SysID, ViewBag.SysList as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AcptDate, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.AcptDate, "DateTime")
                    @Html.ValidationMessageFor(model => model.AcptDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ReqNo, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ReqNo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ReqReason, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ReqReason, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqReason, "", new { @class = "text-danger" })
                </div>
            </div>

			<!--需求发起单位下拉选择-->
            <div class="form-group">
                @Html.LabelFor(model => model.ReqFromDept, new { @class = "col-md-3 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.ReqFromDept, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqFromDept, "", new { @class = "text-danger" })
                    <span class="text-info">（请优先在右侧下拉框选择）</span>
                </div>
                <div class="col-md-3">
                    @Html.DropDownList("ReqFromDeptList", ViewBag.ReqFromDeptList as SelectList, new { @class = "form-control", @onchange = "changeReqFromDept()" })
                </div>
                <div class="col-md-1"></div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ReqFromPerson, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ReqFromPerson, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqFromPerson, "", new { @class = "text-danger" })
                </div>
            </div>

			<!--需求受理人下拉选择-->
            <div class="form-group">
                @Html.LabelFor(model => model.ReqAcptPerson, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.ReqAcptPerson, ViewBag.UserList as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ReqDevPerson, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ReqDevPerson, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqDevPerson, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ReqBusiTestPerson, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ReqBusiTestPerson, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqBusiTestPerson, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DevAcptDate, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.DevAcptDate, "DateTime")
                    @Html.ValidationMessageFor(model => model.DevAcptDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DevEvalDate, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.DevEvalDate, "DateTime")
                    @Html.ValidationMessageFor(model => model.DevEvalDate, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="保存" class="btn btn-primary" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        关闭
                    </button>
                </div>
            </div>
        }
        
    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>